<resources>
    <!-- Base application theme. -->
    <style name="Theme.Move" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neutral_white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral_white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_light_purple</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/PrimaryButton</item>
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
    </style>
</resources>