<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Heading1">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
    </style>

    <style name="Caption1">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/bai_jamjuree_semi_bold</item>
    </style>

    <style name="Button1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/launch_home_fragment_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
<!--        <item name="android:textColor">@color/primary_button_text_color_states</item>-->
    </style>

    <dimen name="button_height">56dp</dimen>
</resources>