<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--region TextStyles-->
    <style name="Heading1">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>

    <style name="Heading2">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="Heading3">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/bai_jamjuree_semi_bold</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_medium</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/bai_jamjuree_regular</item>
    </style>

    <style name="Caption1">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/bai_jamjuree_semi_bold</item>
    </style>

    <style name="Button1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/bai_jamjuree_bold</item>
    </style>
    <!--endregion-->

    <!--region ComponentStyles-->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/Button1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/Body1</item>
        <item name="boxStrokeColor">@color/edit_text_box_stroke</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/neutral_grey</item>
        <item name="android:textColorHint">@color/neutral_grey</item>
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="iconTint">@color/neutral_grey</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="boxStrokeColor">@color/neutral_grey</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/neutral_grey</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Body1</item>
    </style>
    <!--    endregion-->
</resources>